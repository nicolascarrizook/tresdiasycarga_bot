# Sistema Mayra - Development Environment Configuration
# ===================================================

# Environment
ENVIRONMENT=development
APP_NAME=Sistema Mayra
APP_VERSION=1.0.0

# Debug Settings
DEBUG=true
RELOAD=true
LOG_LEVEL=DEBUG

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
SECRET_KEY=dev-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database Configuration
# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=nutrition_db_dev
POSTGRES_SSL=false

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ChromaDB
CHROMA_PERSIST_DIRECTORY=./chroma_db_dev
CHROMA_COLLECTION_NAME=nutrition_recipes_dev

# AI Configuration
# OpenAI
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7
OPENAI_TIMEOUT=30

# Embeddings
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# RAG Configuration
RAG_TOP_K=10
RAG_SIMILARITY_THRESHOLD=0.7
RAG_MAX_CONTEXT_LENGTH=2000

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here
TELEGRAM_WEBHOOK_URL=https://your-dev-domain.com/telegram/webhook
TELEGRAM_WEBHOOK_SECRET=dev-webhook-secret
TELEGRAM_MAX_MESSAGE_LENGTH=4096
TELEGRAM_SESSION_TIMEOUT=1800
TELEGRAM_MAX_FILE_SIZE=20971520

# Admin and User IDs (comma-separated)
TELEGRAM_ADMIN_USER_IDS=123456789,987654321
TELEGRAM_ALLOWED_USER_IDS=

# Nutrition Configuration
DEFAULT_PLAN_DAYS=3
CALORIE_TOLERANCE=0.05
MACRO_TOLERANCE=0.05
MEALS_PER_DAY=4
OPTIONS_PER_MEAL=3
WEIGHT_TYPES=crudo,cocido
DEFAULT_WEIGHT_TYPE=crudo
ECONOMIC_LEVELS=bajo,medio,alto
DEFAULT_ECONOMIC_LEVEL=medio

# n8n Configuration
N8N_WEBHOOK_URL=https://your-n8n-dev-instance.com/webhook
N8N_API_KEY=your-n8n-api-key
N8N_BASE_URL=https://your-n8n-dev-instance.com
N8N_PATIENT_REGISTRATION_WORKFLOW_ID=patient-registration-workflow-id
N8N_PLAN_GENERATION_WORKFLOW_ID=plan-generation-workflow-id
N8N_NOTIFICATION_WORKFLOW_ID=notification-workflow-id

# Logging Configuration
LOG_FORMAT=json
LOG_FILE=./logs/app_dev.log
DATABASE_LOG_LEVEL=DEBUG
API_LOG_LEVEL=DEBUG
BOT_LOG_LEVEL=DEBUG
LOG_ROTATION_SIZE=10MB
LOG_RETENTION_DAYS=7

# Sentry (Optional)
SENTRY_DSN=
ENABLE_SENTRY=false

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With

# Rate Limiting (More lenient for development)
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=60
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_REQUESTS_PER_HOUR=5000
RATE_LIMIT_REQUESTS_PER_DAY=50000

# Security Configuration
# JWT
JWT_SECRET_KEY=dev-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Password Policy (Relaxed for development)
PASSWORD_MIN_LENGTH=6
PASSWORD_MAX_LENGTH=128
PASSWORD_REQUIRE_UPPERCASE=false
PASSWORD_REQUIRE_LOWERCASE=false
PASSWORD_REQUIRE_NUMBERS=false
PASSWORD_REQUIRE_SYMBOLS=false

# Session Configuration
SESSION_TIMEOUT_MINUTES=60
SESSION_MAX_CONCURRENT=10

# API Keys
API_KEY_LENGTH=32
API_KEY_PREFIX=sk_mayra_dev_

# Encryption
ENCRYPTION_KEY=your-encryption-key-here-32-chars-long

# CORS Security
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization
CORS_MAX_AGE=86400

# File Upload
MAX_FILE_SIZE=50MB
ALLOWED_FILE_TYPES=pdf,docx,doc,txt,jpg,jpeg,png

# Development Tools
ENABLE_API_DOCS=true
ENABLE_PROFILING=true
ENABLE_MOCK_DATA=true
ENABLE_TEST_ENDPOINTS=true

# External Services (Development)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_USE_TLS=false

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=7

# Monitoring
HEALTH_CHECK_INTERVAL=30
PERFORMANCE_MONITORING=true
ERROR_TRACKING=true

# Feature Flags
FEATURE_MOTOR_1=true
FEATURE_MOTOR_2=true
FEATURE_MOTOR_3=true
FEATURE_PDF_GENERATION=true
FEATURE_PLAN_VALIDATION=true
FEATURE_RECIPE_SUGGESTIONS=true